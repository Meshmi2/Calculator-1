<Page
    x:Class="Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF333333" MaxWidth="600" MaxHeight="800">
        <Grid.ColumnDefinitions>
            <!-- Left padding. -->
            <ColumnDefinition Width="12"/>
            <!-- Col 1. -->
            <ColumnDefinition Width="1.0*"/>
            <!-- Col 1-2 padding. -->
            <ColumnDefinition Width="16"/>
            <!-- Col 2. -->
            <ColumnDefinition Width="1.0*"/>
            <!-- Col 2-3 padding. -->
            <ColumnDefinition Width="8"/>
            <!-- Col 3. -->
            <ColumnDefinition Width="1.0*"/>
            <!-- Col 3-4 padding. -->
            <ColumnDefinition Width="8"/>
            <!-- Col 4. -->
            <ColumnDefinition Width="1.0*"/>
            <!-- Col 4-5 padding. -->
            <ColumnDefinition Width="8"/>
            <!-- Col 5. -->
            <ColumnDefinition Width="1.0*"/>
            <!-- Right padding. -->
            <ColumnDefinition Width="12"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!-- Top padding. -->
            <RowDefinition Height="12"/>
            <!-- Row 1: Output bar. -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1-2. padding. -->
            <RowDefinition Height="16"/>
            <!-- Row 2. -->
            <RowDefinition Height="1.0*"/>
            <!-- Row 2-3 padding. -->
            <RowDefinition Height="8"/>
            <!-- Row 3. -->
            <RowDefinition Height="1.0*"/>
            <!-- Row 3-4 padding. -->
            <RowDefinition Height="8"/>
            <!-- Row 4. -->
            <RowDefinition Height="1.0*"/>
            <!-- Row 4-5 padding. -->
            <RowDefinition Height="8"/>
            <!-- Row 5. -->
            <RowDefinition Height="1.0*"/>
            <!-- Row 5-6 padding. -->
            <RowDefinition Height="8"/>
            <!-- Row 6. -->
            <RowDefinition Height="1.0*"/>
            <!-- Bottom padding. -->
            <RowDefinition Height="12"/>
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="9" Grid.Column="1" Grid.Row="1">
            <TextBox x:ConnectionId='25' x:Name="EditorBar"
                     TextAlignment="Right"
                     FontSize="100"
                     Background="Gray"
                     Foreground="White"
                     BorderThickness="0"
                     FontFamily="Arial"
                     MaxLength="10"
                     TextWrapping="Wrap">
            </TextBox>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="3">
            <Button x:ConnectionId='24' x:Name="ButtonMem"
                    Content="M"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    FontSize="36"
                    Foreground="LightGray"
                    Background="Gray"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="5">
            <Button x:ConnectionId='23' x:Name="ButtonPre"
                    Content="±"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    FontSize="48"
                    Foreground="LightGray"
                    Background="Gray"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="7">
            <Button x:ConnectionId='22' x:Name="ButtonSqr"
                    Content="√"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    FontSize="48"
                    Foreground="LightGray"
                    Background="Gray"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="9">
            <Button x:ConnectionId='21' x:Name="ButtonPercent"
                    Content="%"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    FontSize="48"
                    Foreground="LightGray"
                    Background="Gray"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="11">
            <Button x:ConnectionId='20' x:Name="ButtonInv"
                    Content="1/x"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    FontSize="28"
                    Foreground="LightGray"
                    Background="Gray"/>
        </Grid>

        <Grid Grid.Column="3" Grid.Row="3">
            <Button x:ConnectionId='19' x:Name="ButtonCE"
                    Content="CE"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    FontSize="36"
                    Foreground="LightGray"
                    Background="Gray"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="5">
            <Button x:ConnectionId='18' x:Name="Button7"
                Content="7"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="GhostWhite"
                Background="Gray"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="7">
            <Button x:ConnectionId='17' x:Name="Button4"
                Content="4"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="GhostWhite"
                Background="Gray"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="9">
            <Button x:ConnectionId='16' x:Name="Button1"
                Content="1"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="GhostWhite"
                Background="Gray"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="11" Grid.ColumnSpan="3">
            <Button x:ConnectionId='15' x:Name="Button0"
                Content="0"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="GhostWhite"
                Background="Gray"/>
        </Grid>
        <Grid Grid.Column="5" Grid.Row="3">
            <Button x:ConnectionId='14' x:Name="ButtonC"
                Content="C"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="36"
                Foreground="LightGray"
                Background="Gray"/>
        </Grid>
        <Grid Grid.Column="5" Grid.Row="5">
            <Button x:ConnectionId='13' x:Name="Button8"
                Content="8"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="GhostWhite"
                Background="Gray"/>
        </Grid>
        <Grid Grid.Column="5" Grid.Row="7">
            <Button x:ConnectionId='12' x:Name="Button5"
                Content="5"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="GhostWhite"
                Background="Gray"/>
        </Grid>
        <Grid Grid.Column="5" Grid.Row="9">
            <Button x:ConnectionId='11' x:Name="Button2"
                Content="2"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="GhostWhite"
                Background="Gray">
            </Button>
        </Grid>

        <Grid Grid.Column="7" Grid.Row="3">
            <Button x:ConnectionId='10' x:Name="ButtonDel"
                Content="DEL"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="24"
                Foreground="LightGray"
                Background="Gray"/>

        </Grid>
        <Grid Grid.Column="7" Grid.Row="5">
            <Button x:ConnectionId='9' x:Name="Button9"
                Content="9"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="GhostWhite"
                Background="Gray"/>

        </Grid>
        <Grid Grid.Column="7" Grid.Row="7">
            <Button x:ConnectionId='8' x:Name="Button6"
                Content="6"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="GhostWhite"
                Background="Gray"/>
        </Grid>
        <Grid Grid.Column="7" Grid.Row="9">
            <Button x:ConnectionId='7' x:Name="Button3"
                Content="3"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="GhostWhite"
                Background="Gray"/>
        </Grid>
        <Grid Grid.Column="7" Grid.Row="11">
            <Button x:ConnectionId='6' x:Name="ButtonDot"
                Content="."
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="GhostWhite"
                Background="Gray"/>

        </Grid>

        <Grid Grid.Column="9" Grid.Row="3">
            <Button x:ConnectionId='5' x:Name="ButtonDiv"
                Content="÷"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="LightGray"
                Background="Gray"/>

        </Grid>
        <Grid Grid.Column="9" Grid.Row="5">
            <Button x:ConnectionId='4' x:Name="ButtonMul"
                Content="x"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="LightGray"
                Background="Gray"/>
        </Grid>
        <Grid Grid.Column="9" Grid.Row="7">
            <Button x:ConnectionId='3' x:Name="ButtonSub"
                Content="-"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="LightGray"
                Background="Gray"/>
        </Grid>
        <Grid Grid.Column="9" Grid.Row="9">
            <Button x:ConnectionId='2' x:Name="ButtonAdd"
                Content="+"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="LightGray"
                Background="Gray"/>
        </Grid>
        <Grid Grid.Column="9" Grid.Row="11">
            <Button x:ConnectionId='1' x:Name="ButtonEq"
                Content="="
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontSize="48"
                Foreground="GhostWhite"
                Background="ForestGreen"/>
        </Grid>
    </Grid>
</Page>

